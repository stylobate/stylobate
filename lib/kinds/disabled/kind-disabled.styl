kind-disabled($this)
  cursor: default !important

  opacity: utilus_alike($this.arguments, 0.5)

  // Prevent different states in most browsers
  if with-events in $this.arguments
    &:focus
      outline: 0
  else
    pointer-events: none

  stylobate_defaults($this, -nested '& &')

kind-disabled-nested()
  opacity: 1
