kind-shrink()
  display: block
  overflow: hidden

  if inline in arguments
    &
      {"@-moz-document url-prefix() {"} &
        flex-shrink: 1000000000
      unquote("}")

kind-shrink-left()
  float: left

kind-shrink-right()
  float: right

kind-shrink-wrap()
  // insert clearfix in else
  if inline in arguments
    display: inline-block
    white-space: nowrap
    max-width: 100%

    &
      {"@-moz-document url-prefix() {"} &
        display: inline-flex
        flex-direction: row-reverse
      unquote("}")

